.content-container {
  flex: 1;
  height: 100%;
}

.content-scroll-view {
  width: 100%;
  height: 100%;
}

.content-item {
  width: 100%;
  height: 375rpx;
  position: relative;
}

.content-item::after {
  content: "";
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  height: 1px;
  background: lightgray;
}

.content-item-image {
  width: 100%;
  height: 225rpx;
  display: block;
}

.content-item-descinfo {
  font-size: 30rpx;
  text-align: center;
}

.content-item-addNumbers {
  padding-right: 30rpx;
  bottom: 0;
  right: 0;
  height: 100rpx;
  position: absolute;
  display: flex;
  align-items: center;
}

.content-item-addNumbers-text {
  width: 50rpx;
  height: 50rpx;
  text-align: center;
  
}

.content-item-addNumbers-input {
  width: 50rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  text-align: center;
  font-size: 30rpx;
}