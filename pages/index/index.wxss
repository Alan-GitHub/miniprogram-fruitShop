.container {
  position: absolute;
  width: 100%;
  height: 100%;
  display: flex;
}

.menu-container {
  width: 25%;
  height: 100%;
}

.menu-scroll-view {
  width: 100%;
  height: 100%;
  background: lightgray;
}

.menu-scroll-view-item {
  width: 100%;
  height: 150rpx;
  font-size: 37rpx;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center; 
}

.active {
  background: white;
}

