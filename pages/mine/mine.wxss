/* pages/mine/mine.wxss */
.container {
  width: 100%;
  height: 100%;
  position: absolute;
  display: flex;
  flex-direction: column;
  background: rgb(253, 251, 251);
}

.upHeader {
  width: 100%;
  height: 200rpx;
  position: relative;
  padding-top: 70rpx;
  padding-left: 150rpx;
}

.userinfo-back {
  width: 100%;
  height: 128rpx;
  display: flex;
  align-items: center;
}

.userinfo-headicon {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
}

.userinfo-usernameback {
  height: 100%;
  flex: 1;
  padding-left: 30rpx;
  display: flex;
  align-items: center;
}

.userinfo-username {
  height: 60rpx;
}

.userinfo-loginbtn {
  width: 180rpx;
  font-size: 30rpx;
  margin-left: 0;
}

.downMenu {
  width: 100%;
  flex: 1;
}

.downMenu-itemback {
  width: 100%;
  height: 120rpx;
  position: relative;
  align-items: center;
  display: flex;
}

.downMenu-itemback::after {
  content: "";
  position: absolute;
  left: 20rpx;
  bottom: 0px;
  right: 0px;
  height: 1px;
  background: gray;
  transform: scaleY(0.5);
}

.downMenu-item {
  padding-left: 20rpx;
}

.downMenu-itemarrow {
  position: absolute;
  right: 20rpx;
  color: gray;
}